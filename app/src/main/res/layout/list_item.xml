<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acct_sum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.temenos.dshubhamrajput.genericnet.AcctSumActivity"
    android:weightSum="1">




    <TextView
        android:id="@+id/textView4"
        android:text="Currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AccountNumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="25dp"
        android:textColor="#5d5d5d"
        android:id="@+id/Currency" />




    <TextView
        android:text="Working Balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:id="@+id/textView12"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="#000000"
        android:background="#aed7fc"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Currency"
        android:id="@+id/WorkingBalance"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="25dp"
        android:textColor="#5d5d5d"/>

    <TextView
        android:text="Account Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:id="@+id/CategoryView"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/textlines"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WorkingBalance"
        android:id="@+id/Category"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="25dp"
        android:textColor="#5d5d5d"/>

    <TextView
        android:text="Account No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22"
        android:textColor="#000000"
        android:id="@+id/textView2"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="#aed7fc"/>





    <TextView
        android:id="@+id/AccountNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="25dp"
        android:textColor="#5d5d5d"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentStart="true" />
</RelativeLayout>