<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acct_sum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.temenos.dshubhamrajput.genericnet.ListBeneficiaries"
    android:weightSum="1">




    <TextView
        android:text="Account No"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:id="@+id/AccNoOuter"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/AccountNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="25dp"
        android:textColor="#5d5d5d"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/NicknameOuter" />

    <TextView
        android:id="@+id/NicknameOuter"
        android:text="Nick Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AccNoOuter"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="#000000"
        android:background="#aed7fc"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="25dp"
        android:textColor="#5d5d5d"
        android:id="@+id/NickName"
        android:layout_alignBaseline="@+id/NicknameOuter"
        android:layout_alignBottom="@+id/NicknameOuter"
        android:layout_alignParentStart="true" />


</RelativeLayout>